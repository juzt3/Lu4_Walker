<Window x:Class="LU4_Walker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LU4 Walker"
        Width="420"
        Height="250"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#2C2C2C"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#2C2C2C">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Комбо-бокс -->
                <RowDefinition Height="Auto"/>
                <!-- Старт / Стоп -->
                <RowDefinition Height="Auto"/>
                <!-- Скриншоты -->
                <RowDefinition Height="Auto"/>
                <!-- Подсказка -->
            </Grid.RowDefinitions>

            <!-- Заголовок + Закрытие -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                <TextBlock Text="LU4 Walker"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <Button Content="X"
                        Width="30"
                        Height="25"
                        Background="DarkRed"
                        Foreground="White"
                        FontWeight="Bold"
                        DockPanel.Dock="Right"
                        Margin="5,0,0,0"
                        Click="btnClose_Click"/>
            </DockPanel>

            <!-- Выбор окна -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="LU4 Window:" Width="80" Foreground="White"/>
                <ComboBox x:Name="cbWindows"
                          Width="280"
                          DropDownOpened="cbWindows_DropDownOpened"
                          SelectionChanged="cbWindows_SelectionChanged"/>
            </StackPanel>

            <!-- Старт / Стоп таймеров -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnStart"
                        Content="Start"
                        FontWeight="Bold"
                        Background="Green"
                        Foreground="White"
                        Width="100"
                        Margin="5"
                        Click="btnStart_Click"/>
                <Button x:Name="btnStop"
                        Content="Stop"
                        FontWeight="Bold"
                        Background="Red"
                        Foreground="White"
                        Width="100"
                        Margin="5"
                        Click="btnStop_Click"
                        IsEnabled="False"/>
            </StackPanel>

            <!-- Скриншоты по HWND -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="btnScreenshot"
                        Content="📸"
                        ToolTip="Скриншот окна LU4"
                        Width="60"
                        Margin="5"
                        Click="btnScreenshot_Click"/>
            </StackPanel>

            <!-- Подсказка -->
            <TextBlock Grid.Row="4"
                       Text="PageUp / PageDown — Hotkeys. All actions for the selected LU4 window."
                       Foreground="LightGray"
                       FontStyle="Italic"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
